<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listViewHome"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/list_vertical_margin"
    android:paddingBottom="@dimen/list_vertical_margin"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Button
        android:id="@+id/buttonPower"
        android:layout_width="@dimen/circle_button_size"
        android:layout_marginRight="@dimen/list_vertical_margin"
        android:layout_height="@dimen/circle_button_size"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/powerbutton_undefined" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/textViewHome"
        android:textSize="@dimen/text_size"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </TextView>
</LinearLayout>