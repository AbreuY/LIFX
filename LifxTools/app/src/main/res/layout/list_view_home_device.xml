<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listViewHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="@dimen/list_vertical_margin"
    android:paddingBottom="@dimen/list_vertical_margin">

    <Button
        android:id="@+id/buttonPower"
        android:layout_width="@dimen/power_button_size"
        android:layout_height="@dimen/power_button_size"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginEnd="@dimen/list_horizontal_margin"
        android:background="@drawable/powerbutton_offline" />

    <TextView
        android:id="@+id/textViewHome"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</LinearLayout>